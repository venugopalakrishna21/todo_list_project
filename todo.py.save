
import os

# File to store tasks
TASK_FILE = "tasks.txt"

# Load tasks from file
def load_tasks():
    if os.path.exists(TASK_FILE):
        with open(TASK_FILE, "r") as file:
            return [task.strip() for task in file.readlines()]
    return []

# Save tasks to file
def save_tasks(tasks):
    with open(TASK_FILE, "w") as file:
        for task in tasks:
            file.write(task + "\n")

# Display the menu
def show_menu():
    print("\nğŸ“Œ To-Do List Menu:")
    print("1ï¸âƒ£  View Tasks")
    print("2ï¸âƒ£  Add Task")   
    print("3ï¸âƒ£  Remove Task")
    print("4ï¸âƒ£  Exit")

# Show tasks
def view_tasks(tasks):
    if not tasks:
        print("ğŸ“­ No tasks found!")
    else:
        print("\nğŸ“ Your Tasks:")
        for i, task in enumerate(tasks, 1):
            print(f"{i}. {task}")

# Add a new task
def add_task(tasks):
    task = input("â• Enter a new task: ").strip()
    if task:
        tasks.append(task)
        save_tasks(tasks)
        print("âœ… Task added successfully!")
    else:
        print("âš ï¸ Task cannot be empty!")

# Remove a task
def remove_task(tasks):
    view_tasks(tasks)
    if not tasks:
        return
    try:
        task_num = int(input("âŒ Enter task number to remove: "))
        if 1 <= task_num <= len(tasks):
            removed_task = tasks.pop(task_num - 1)
            save_tasks(tasks)
            print(f"ğŸ—‘ï¸ Removed: {removed_task}")
        else:
            print("âš ï¸ Invalid task number!")
    except ValueError:
        print("âš ï¸ Please enter a valid number!")

# Main function to run the program
def main():
    tasks = load_tasks()
    while True:
        show_menu()
        choice = input("ğŸ‘‰ Choose an option (1-4): ").strip()

        if choice == "1":
            view_tasks(tasks)
        elif choice == "2":
            add_task(tasks)
        elif choice == "3":
            remove_task(tasks)
        elif choice == "4":
            print("ğŸ‘‹ Exiting... Have a productive day!")
            break
        else:
            print("âš ï¸ Invalid choice! Please enter 1, 2, 3, or 4.")

